<div class="container">
  <article>
    <h1>Login</h1>
    <form action="/api//sessions/login" method="post">
      <label for="email">
        Email:
        <input type="email" name="email" id="email" required />
      </label>
      <label for="password">
        Password:
        <input type="password" name="password" id="password" required />
      </label>
      <button type="submit">Login</button>
      <a href="/register"> Register </a>
    </form>
  </article>
</div>